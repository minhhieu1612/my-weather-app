{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es2020",
    "target": "es6",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    // "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "src": ["./src"]
    }
  }
}
